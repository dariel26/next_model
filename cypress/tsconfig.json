{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["esnext", "dom"],
        "types": ["cypress", "node"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.cy.tsx"]
}
